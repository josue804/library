<div class="text-center row">
  <h2>Our Collection:</h2>
</div>
<% if @books %>
<table class="table">
  <tr class="tk-row">
    <th>Title</th>
    <th>Author</th>
    <th>Pages</th>
    <th>Publication Year</th>
    <th>Genre</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
    <% @books.each() do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= book.pages %></td>
    <td><%= book.publication_year %></td>
    <td><%= book.genre %></td>
    <td><a href="/librarians/<%= book.id() %>/edit"><span class="glyphicon glyphicon-pencil"></span></a></td>
    <td><a href="/librarians/<%= book.id() %>"><span class="glyphicon glyphicon-fire"></span></a></td>
  </tr>
    <% end %>
</table>
<% end %>
